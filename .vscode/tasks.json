{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "StartPhpServer",
            "type": "process",
            "linux": {
                "command": "php",
                "args": [
                    "-S", "localhost:8080",
                    "-e",
                    "-t", "${workspaceFolder}/public",
                    "-d", "xdebug.remote_enable=1",
                    "-d", "xdebug.remote_autostart=1",
                    "-d", "xdebug.client_port=9000"
                ]
            },
            "windows": {
                "command": "php",
                "args": [
                    "-S", "localhost:8080",
                    "-e",
                    "-t", "${workspaceFolder}/public",
                    "-d", "xdebug.mode=debug",
                    "-d", "xdebug.start_with_request=yes",
                    "-d", "xdebug.client_port=9000"
                ],
            },
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "StopPhpServer",
            "type": "shell",
            "linux": {
                "command": "pkill",
                "args": [
                    "-f", "^php -S localhost:8080 -e -t "
                ]
            },
            "windows": {
                "command": "Get-CimInstance Win32_Process -Filter \\\"Name='php.exe' AND CommandLine LIKE '%\\\\php.exe -S localhost:8080 -e -t %'\\\" -ErrorAction Continue | % { Stop-Process $_.ProcessId }"
            },
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "promptOnClose": false,
            "problemMatcher": []
        }
    ]
}
